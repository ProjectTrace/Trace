<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uw.hcde.fizzlab.trace">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <permission
        android:name="com.javapapers.android.maps.path.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.TraceApplication"
        android:icon="@drawable/app_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Dispatch sign up or main activity. Entry point-->
        <activity
            android:name=".main.DispatchActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Welcome screen -->
        <activity
            android:name=".main.WelcomeActivity"
            android:label="@string/welcome"
            android:screenOrientation="portrait" />

        <!-- Sign up screen-->
        <activity
            android:name=".main.SignUpActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait" />


        <!-- Main activity -->
        <activity
            android:name=".main.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <!-- ============================================ -->
        <!-- ======= Draw related activities ============ -->
        <!-- ============================================ -->
        <!-- Draw activity -->
        <activity
            android:name=".draw.DrawActivity"
            android:label="@string/draw"
            android:screenOrientation="portrait" />

        <!-- Annotate activity -->
        <activity
            android:name=".draw.AnnotateActivity"
            android:label="@string/annotate"
            android:screenOrientation="portrait" />


        <!-- ============================================ -->
        <!-- ======= Walk related activities ============ -->
        <!-- ============================================ -->
        <!-- Walk activity -->
        <activity
            android:name=".walk.ChooseDistanceActivity"
            android:label="@string/choose_distance"
            android:screenOrientation="portrait"
            android:theme="@style/HoloTheme" />
        <activity
            android:name=".walk.ChooseDrawingActivity"
            android:label="@string/choose_drawing"
            android:screenOrientation="portrait" />

        <activity
            android:name=".walk.PathGoogleMapActivity"
            android:label="@string/map"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCquKZ4yQgjnMPPdWmexfkp1-Zipc_vZjw" />
        <!--AIzaSyC5RUJYEJRnKqw37d35qWUSG7-1OWM8-s0-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />



        <!-- ============================================ -->
        <!-- ======= Profile related activities ============ -->
        <!-- ============================================ -->
        <!-- Profile activity -->
        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/you"
            android:screenOrientation="portrait" />
    </application>

</manifest>
