<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uw.hcde.fizzlab.trace">

    <application
        android:icon="@drawable/app_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!--============================================-->
        <!--======= Draw related activities ============-->
        <!--============================================-->
        <!-- Draw activity -->
        <activity
            android:name=".draw.DrawActivity"
            android:label="@string/draw"
            android:screenOrientation="portrait" />

        <!-- Annotate activity -->
        <activity
            android:name=".draw.AnnotateActivity"
            android:label="@string/annotate"
            android:screenOrientation="portrait" />


        <!--============================================-->
        <!--======= Walk related activities ============-->
        <!--============================================-->
        <!-- Walk activity -->
        <activity
            android:name=".walk.WalkActivity"
            android:label="@string/walk"
            android:screenOrientation="portrait" />


        <!--============================================-->
        <!--======= Profile related activities ============-->
        <!--============================================-->
        <!-- Profile activity -->
        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/you"
            android:screenOrientation="portrait" />

    </application>

</manifest>
