<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uw.hcde.fizzlab.trace">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".controller.main.TraceApplication"
        android:icon="@drawable/app_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Dispatch sign up or main activity. Entry point-->
        <activity
            android:name=".controller.main.DispatchActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Welcome screen -->
        <activity
            android:name=".controller.main.WelcomeActivity"
            android:label="@string/welcome"
            android:screenOrientation="portrait" />

        <!-- Sign up screen-->
        <activity
            android:name=".controller.main.SignUpActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait" />


        <!-- Main activity -->
        <activity
            android:name=".controller.main.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <!-- ============================================ -->
        <!-- ======= Draw related activities ============ -->
        <!-- ============================================ -->
        <!-- Draw activity -->
        <activity
            android:name=".controller.draw.DrawActivity"
            android:label="@string/draw"
            android:screenOrientation="portrait" />

        <!-- Annotate activity -->
        <activity
            android:name=".controller.draw.AnnotationActivity"
            android:label="@string/annotate"
            android:screenOrientation="portrait"
            android:theme="@style/HoloTheme"
            />


        <!-- ============================================ -->
        <!-- ======= Walk related activities ============ -->
        <!-- ============================================ -->
        <!-- Walk activity -->
        <activity
            android:name=".controller.walk.ChooseDistanceActivity"
            android:label="@string/choose_distance"
            android:screenOrientation="portrait"
            android:theme="@style/HoloTheme" />
        <activity
            android:name=".controller.walk.ChooseDrawingActivity"
            android:label="@string/choose_drawing"
            android:screenOrientation="portrait" />

        <activity
            android:name=".controller.walk.MapActivity"
            android:label="@string/map"
            android:screenOrientation="portrait" />


        <!-- ============================================ -->
        <!-- ======= Profile related activities ============ -->
        <!-- ============================================ -->
        <!-- Profile activity -->
        <activity
            android:name=".controller.profile.ProfileActivity"
            android:label="@string/you"
            android:screenOrientation="portrait" />
    </application>

</manifest>
