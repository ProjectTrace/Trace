<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rose">

    <RelativeLayout
        android:id="@+id/button_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp">

        <info.hoang8f.widget.FButton
            android:id="@+id/button_clear"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/clear"
            fbutton:buttonColor="@color/rose_light"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/rose_dark"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="3dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/button_next"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/next"
            fbutton:buttonColor="@color/rose_light"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/rose_dark"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="3dp" />


    </RelativeLayout>

    <com.uw.hcde.fizzlab.trace.ui.drawing.DrawingView
        android:id="@+id/drawing_view_annotation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_menu" />

</RelativeLayout>
