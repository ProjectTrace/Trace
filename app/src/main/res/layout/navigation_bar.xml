<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"

    android:id="@+id/navigation_content"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentTop="true">

    <TextView
        android:id="@+id/navigation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:paddingBottom="8dp"
        android:paddingTop="12dp"
        android:textSize="22sp" />

    <!--<TextView-->
    <!--android:id="@+id/navigation_button_home"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:clickable="true"-->
    <!--android:paddingLeft="10dp"-->
    <!--android:text="@string/home"-->
    <!--android:textColor="@drawable/text_clickable" />-->

    <ImageView
        android:id="@+id/navigation_button_home"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/home_button"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/navigation_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:text="@string/back"
        android:textColor="@drawable/text_clickable"
        android:visibility="invisible" />

    <info.hoang8f.widget.FButton
        android:id="@+id/navigation_button_report"
        android:layout_width="75dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="@string/report_problem"
        android:textSize="13sp"
        android:visibility="invisible"
        fbutton:cornerRadius="5dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="2dp" />


    <View
        android:id="@+id/navigation_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.2"
        android:background="@color/black" />


</RelativeLayout>